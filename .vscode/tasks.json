{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake --build Build -DCMAKE_BUILD_TYPE=Release --target ALL_BUILD",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug --build Build --target ALL_BUILD",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Format all files",
            "type": "shell",
            "command": "cmake --build Build --target ClangFormat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Tidy all files",
            "type": "shell",
            "command": "cmake --build Build --target ClangTidy",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}